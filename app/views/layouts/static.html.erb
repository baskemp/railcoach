<!doctype html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="Content-Language" content="en" />
    <meta name="copyright" content="Creative Commons" />
    <meta name="distribution" content="global" />
    <meta name="googlebot" content="index,follow" />
    <meta name="robots" content="index,follow" />

    <meta name="publisher" content=".freefoundry" />
    <meta name="Designer" content="Joost Elfering" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />

    <meta http-equiv="imagetoolbar" content="no" />

    <title><%= @nav %>.freefoundry</title>

    <link rel="shortcut icon" href="http://www.d-its.net/favicon.ico">
    <link href="/stylesheets/base.css" media="all" rel="stylesheet" type="text/css" />
    <!--[if IE]>
    <link href="stylesheets/iebh.css" media="all" rel="stylesheet" type="text/css" />
    <![endif]-->
    <script type="text/javascript" src="/javascripts/jquery-1.4.2.min.js"></script>
    <script type="text/javascript">
      jQ = jQuery.noConflict();
    </script>
    <script type="text/javascript" src="/javascripts/modernizr-1.5.min.js"></script>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div class="canvas">
      <header>
        <div class="header">
          <div class="spacer">
            <nav>
              <ul class="navigation">
                <li<%= " class='opened'" if @nav == 'Home' %>><a href="/static/home">Home</a></li>
                <li<%= " class='opened'" if @nav == 'Projects' %>><a href="/static/projects">Projects</a></li>
                <li<%= " class='opened'" if @nav == 'Members' %>><a href="/static/members">Members</a></li>
                <li<%= " class='opened'" if @nav == 'News' %>><a href="/static/news">News</a></li>
                <li<%= " class='opened'" if @nav == 'About' %>><a href="/static/about">About</a></li>
              </ul>
            </nav>
            <img src="/images/logo-preview.png" alt=".freefoundry" class="logo" />
          </div>
        </div>
      </header>
      <%= yield %>
    </div>
  <footer>
    <div class="footer">
      <div class="spacer">
        <div class="socialButtons">
          <ul>
            <li id="social_linkedin">
              <a href="http://www.linkedin.com/groups?gid=3202443" title="Connect with us on LinkedIn"><%= image_tag "transparent.gif" %></a>
            </li>
            <li id="social_facebook">
              <a href="http://www.facebook.com/pages/Freefoundry/150321324978822" title="Find us on facebook"><%= image_tag "transparent.gif" %></a>
            </li>
            <li id="social_twitter">
              <a href="http://twitter.com/freefoundry" title="Follow us on twitter"><%= image_tag "transparent.gif" %></a>
            </li>
            <li id="social_identica">
              <a href="http://identi.ca/group/freefoundry" title="Subscribe to us on identi.ca"><%= image_tag "transparent.gif" %></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>

