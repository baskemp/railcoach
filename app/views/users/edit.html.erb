<% content_for :breadcrumb do %>
  <ul>
    <li><%= link_to image_tag('transparent.gif') + 'Users', home_users_path %></li>
    <li><%= link_to image_tag('transparent.gif') + @user.profile.fullname, user_path(@user) %></li>
    <li><%= link_to image_tag('transparent.gif') + 'Edit', '#' %></li>
  </ul>
<% end %>

<div class="row">
  <div class="column col1-6 memberUnits">
    <figure>
      <div class="gridSpacer block<%= ' female' if @user.profile.gender == 'f' %>"></div>
    </figure>
  </div>
  <div class="column col5-6">
    <div class="gridSpacer block blockSpacer">
      <h1><%= @user.profile.fullname %></h1>
      <p>      
        <%= form_for(@user) do |f| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
             </ul>
           </div>
         <% end %>

         <div class="field">
           <%= f.label :email %><br />
           <%= @user.email %>
         </div>
         <div class="field">
           <%= f.label :password %><br />
           <%= f.password_field :password %>
         </div>
         <div class="field">
           <%= f.label :password_confirmation %><br />
           <%= f.password_field :password_confirmation %>
         </div>

         <div class="actions">
           <%= f.submit %>
        </div>
      <% end %>
      </p>
      <div class="footer">
        <%= link_to 'Back', user_path %>
      </div>
    </div>
  </div>
  <div class="break"></div>
</div>
