<% content_for :breadcrumb do %>
  <ul>
    <li><%= link_to image_tag('transparent.gif') + 'Projects', home_projects_path %></li>
    <li><%= link_to image_tag('transparent.gif') + 'All by name', '#' %></li>
  </ul>
<% end %>
<div class="row">
  <div class="column col1-1">
    <div class="gridSpacer">
      <h1>Projects of <%= image_tag 'projectlodge.png', :alt => '.projectlodge',:class => 'projectlodgeLogo' %></h1>
    </div>
  </div>
</div>

<div id="projects_list" class="row">
  <% @projects.each do |project| %>
    <div class="column col1-2">
      <div class="gridSpacer block blockSpacer">
        <article>
          <h3><%= link_to project.name, project %></h3>
          <p><%= project.description %></p>
        </article>
      </div>
    </div>
  <% end %>
  <div class="break"></div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#projects_list .block:odd").each(function (i) {
            var object = $("#projects_list .block:odd").get(i)
            var odd_height = $(object).height();
            object = $("#projects_list .block:even").get(i)
            even_height = $(object).height();
            if (odd_height > even_height) {
                object = $("#projects_list .block:even").get(i);
                $(object).height(odd_height);
            } else {
                object = $("#projects_list .block:odd").get(i);
                $(object).height(even_height);
            }
        });
    });
</script>
